// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model User {
  isAdmin      Boolean
  id           Int      @id @default(autoincrement())
  first_name   String
  last_name    String
  phone        String   @unique
  parent_phone String
  email        String   @unique
  pass         String
  lectures     String[]
  buying       String?
}

model Lecture {
  id        Int      @id @default(autoincrement())
  name      String
  des       String[]
  price     Int
  sections  Int[]
  thumbnail String
}

model Section {
  id        Int      @id @default(autoincrement())
  lecture   String?
  name      String
  des       String[]
  tag       String?
  thumbnail String?
  yourlink  String?
}

model Question {
  id      Int     @id @default(autoincrement())
  text    String
  options String[]
  image   String?
}
