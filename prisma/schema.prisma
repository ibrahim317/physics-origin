// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model User {
  id   Int      @id @default(autoincrement())
  first_name String
  last_name String
  phone String @unique
  parent_phone String
  email String  @unique 
  pass String
}
model Course {
  id   Int      @id @default(autoincrement())
  name String  
  des String
  price Int
  thumbnail String
  vidlink String
}
model Section{
  id String @id 
  name String  
  des String
  tag String
  thumbnail String
  vidlink String
}