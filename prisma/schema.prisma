// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model User {
  isAdmin      Boolean
  id           Int      @id @default(autoincrement())
  first_name   String
  last_name    String
  phone        String   @unique
  parent_phone String
  email        String   @unique
  pass         String
  courses      Int[]
  lectures     Int[]
  buying       String?
}

model Course {
  id        Int       @id @default(autoincrement())
  name      String
  des       String[]
  price     Int
  thumbnail String
  section  Section[]
}

model Section {
  id        Int      @id @default(autoincrement())
  name      String
  des       String[]
  tag      Tag 
  thumbnail String?
  yourlink  String?
  course    Course[] 
  questions Question[]
}



model Question {
  id      Int      @id @default(autoincrement())
  text    String
  options String[]
  image   String?
  quiz    Section[]
}

enum Tag {
  QUIZ
  VIDEO
  FILE
}