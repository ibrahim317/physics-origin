// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model User {
  id    Int     @id @default(autoincrement())
  first_n String
  last_n String
  phone String @unique
  parent_phone String @unique
  email String  @unique
  pass String
}